import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { 
  Sun, 
  Moon, 
  Heart, 
  Star,
  BookmarkPlus,
  Sparkles,
  Plus
} from "lucide-react";
import { toast } from "sonner";

// Sample Adhkar data
const ADHKAR_DATA = {
  morning: [
    {
      id: 1,
      title: "Ayat al-Kursi",
      arabic: "اللَّهُ لَا إِلَٰهَ إِلَّا هُوَ الْحَيُّ الْقَيُّومُ ۚ لَا تَأْخُذُهُ سِنَةٌ وَلَا نَوْمٌ",
      transliteration: "Allahu la ilaha illa huwa al-hayyu al-qayyum...",
      translation: "Allah ! Point de divinité à part Lui, le Vivant, Celui qui subsiste par lui-même...",
      source: "Qur'ān 2:255",
      repetitions: 1,
    },
    {
      id: 2,
      title: "Subhan Allah wa bihamdihi",
      arabic: "سُبْحَانَ اللَّهِ وَبِحَمْدِهِ",
      transliteration: "Subhan Allahi wa bihamdihi",
      translation: "Gloire et louange à Allah",
      source: "Muslim",
      repetitions: 100,
    },
  ],
  evening: [
    {
      id: 3,
      title: "A'udhu billah",
      arabic: "أَعُوذُ بِاللَّهِ مِنَ الشَّيْطَانِ الرَّجِيمِ",
      transliteration: "A'udhu billahi min ash-shaytani ar-rajim",
      translation: "Je cherche refuge auprès d'Allah contre Satan le maudit",
      source: "Tradition prophétique",
      repetitions: 3,
    },
  ],
  after_prayer: [
    {
      id: 4,
      title: "Astaghfirullah",
      arabic: "أَسْتَغْفِرُ اللَّهَ",
      transliteration: "Astaghfirullah",
      translation: "Je demande pardon à Allah",
      source: "Muslim",
      repetitions: 3,
    },
    {
      id: 5,
      title: "Allahumma anta as-salam",
      arabic: "اللَّهُمَّ أَنْتَ السَّلَامُ وَمِنْكَ السَّلَامُ",
      transliteration: "Allahumma anta as-salam wa minka as-salam",
      translation: "Ô Allah, Tu es la Paix et de Toi vient la paix",
      source: "Muslim",
      repetitions: 1,
    },
  ],
};

const DUA_CATEGORIES = [
  { id: "stress", title: "Stress & Anxiété", icon: Heart, color: "from-purple-500 to-purple-600" },
  { id: "illness", title: "Maladie", icon: Heart, color: "from-red-500 to-red-600" },
  { id: "travel", title: "Voyage", icon: Sparkles, color: "from-blue-500 to-blue-600" },
  { id: "sadness", title: "Tristesse", icon: Heart, color: "from-gray-500 to-gray-600" },
  { id: "success", title: "Réussite", icon: Star, color: "from-green-500 to-green-600" },
  { id: "gratitude", title: "Gratitude", icon: Star, color: "from-amber-500 to-amber-600" },
];

export default function AdhkarSection() {
  const queryClient = useQueryClient();
  const [activeTab, setActiveTab] = useState("morning");

  const { data: favorites = [] } = useQuery({
    queryKey: ['dua-favorites'],
    queryFn: () => base44.entities.DuaFavorite.list(),
  });

  const addFavoriteMutation = useMutation({
    mutationFn: (dhikr) => base44.entities.DuaFavorite.create({
      title: dhikr.title,
      arabic_text: dhikr.arabic,
      transliteration: dhikr.transliteration,
      translation: dhikr.translation,
      category: activeTab === "morning" ? "morning" : activeTab === "evening" ? "evening" : "after_prayer",
      source: dhikr.source,
      reference: dhikr.source,
    }),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['dua-favorites'] });
      toast.success("Ajouté aux favoris ✨");
    },
  });

  const isFavorite = (dhikrId) => {
    return favorites.some(f => f.title === ADHKAR_DATA[activeTab]?.find(d => d.id === dhikrId)?.title);
  };

  return (
    <div className="space-y-6">
      {/* Categories Grid */}
      <div className="grid grid-cols-2 md:grid-cols-3 gap-4">
        {DUA_CATEGORIES.map((category) => {
          const Icon = category.icon;
          return (
            <Card 
              key={category.id}
              className="border-none shadow-lg cursor-pointer hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
            >
              <CardContent className="p-6 flex flex-col items-center gap-3 text-center">
                <div className={`w-14 h-14 rounded-2xl bg-gradient-to-br ${category.color} flex items-center justify-center shadow-lg`}>
                  <Icon className="w-7 h-7 text-white" />
                </div>
                <span className="text-sm font-semibold text-gray-700">
                  {category.title}
                </span>
              </CardContent>
            </Card>
          );
        })}
      </div>

      {/* Adhkar Tabs */}
      <Card className="border-none shadow-xl">
        <CardHeader className="border-b bg-gradient-to-r from-amber-50 to-white">
          <CardTitle className="flex items-center gap-2 text-amber-900">
            <Sparkles className="w-5 h-5" />
            Adhkār quotidiens
          </CardTitle>
        </CardHeader>
        <CardContent className="p-6">
          <Tabs value={activeTab} onValueChange={setActiveTab}>
            <TabsList className="grid w-full grid-cols-3 mb-6">
              <TabsTrigger value="morning">
                <Sun className="w-4 h-4 mr-2" />
                Matin
              </TabsTrigger>
              <TabsTrigger value="evening">
                <Moon className="w-4 h-4 mr-2" />
                Soir
              </TabsTrigger>
              <TabsTrigger value="after_prayer">
                Après prière
              </TabsTrigger>
            </TabsList>

            {["morning", "evening", "after_prayer"].map((tab) => (
              <TabsContent key={tab} value={tab} className="space-y-4">
                {ADHKAR_DATA[tab]?.map((dhikr) => (
                  <Card key={dhikr.id} className="border-2 border-gray-200 hover:border-amber-300 transition-all">
                    <CardContent className="p-6">
                      {/* Header */}
                      <div className="flex items-start justify-between mb-4">
                        <div>
                          <h3 className="font-bold text-gray-900 mb-1">{dhikr.title}</h3>
                          <Badge variant="outline" className="text-xs">
                            {dhikr.source}
                          </Badge>
                        </div>
                        <Button
                          size="sm"
                          variant="ghost"
                          onClick={() => addFavoriteMutation.mutate(dhikr)}
                          disabled={isFavorite(dhikr.id)}
                        >
                          <Star 
                            className={`w-5 h-5 ${
                              isFavorite(dhikr.id) 
                                ? 'text-yellow-500 fill-yellow-500' 
                                : 'text-gray-400'
                            }`}
                          />
                        </Button>
                      </div>

                      {/* Arabic Text */}
                      <div className="bg-amber-50 rounded-xl p-4 mb-4">
                        <p className="text-3xl font-arabic text-right leading-loose text-gray-900">
                          {dhikr.arabic}
                        </p>
                      </div>

                      {/* Transliteration */}
                      <p className="text-sm italic text-gray-600 mb-2">
                        {dhikr.transliteration}
                      </p>

                      {/* Translation */}
                      <p className="text-gray-700 mb-4">
                        {dhikr.translation}
                      </p>

                      {/* Repetitions */}
                      {dhikr.repetitions > 1 && (
                        <Badge className="bg-amber-100 text-amber-900 border border-amber-300">
                          À répéter {dhikr.repetitions} fois
                        </Badge>
                      )}
                    </CardContent>
                  </Card>
                ))}
              </TabsContent>
            ))}
          </Tabs>
        </CardContent>
      </Card>

      {/* Favorites */}
      <Card className="border-none shadow-xl">
        <CardHeader className="border-b bg-gradient-to-r from-yellow-50 to-white">
          <CardTitle className="flex items-center gap-2 text-yellow-900">
            <Star className="w-5 h-5" />
            Mes favoris ({favorites.length})
          </CardTitle>
        </CardHeader>
        <CardContent className="p-6">
          {favorites.length === 0 ? (
            <div className="text-center py-8">
              <Star className="w-12 h-12 text-gray-300 mx-auto mb-3" />
              <p className="text-gray-500">Aucun favori pour le moment</p>
              <p className="text-sm text-gray-400 mt-1">
                Ajoutez vos duʿāʾ préférés en cliquant sur l'étoile
              </p>
            </div>
          ) : (
            <div className="grid gap-4">
              {favorites.map((fav) => (
                <Card key={fav.id} className="border-2 border-yellow-200 bg-yellow-50/50">
                  <CardContent className="p-4">
                    <h4 className="font-semibold text-gray-900 mb-2">{fav.title}</h4>
                    <p className="text-2xl font-arabic text-right mb-2 text-gray-900">
                      {fav.arabic_text}
                    </p>
                    <p className="text-sm text-gray-700">{fav.translation}</p>
                  </CardContent>
                </Card>
              ))}
            </div>
          )}
        </CardContent>
      </Card>
    </div>
  );
}
