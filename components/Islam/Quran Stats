import React from "react";
import { Card, CardContent } from "@/components/ui/card";
import { BookOpen, CheckCircle2, Eye, Trophy } from "lucide-react";

export default function QuranStats({ progress = [] }) {
  const memorizedCount = progress.filter(p => p.progress_type === 'memorized').length;
  const readCount = progress.filter(p => p.progress_type === 'read').length;
  const reviewedCount = progress.filter(p => p.progress_type === 'reviewed').length;

  // Total verses in Quran = 6236
  const totalVerses = 6236;
  const memorizedPercentage = ((memorizedCount / totalVerses) * 100).toFixed(1);
  const readPercentage = ((readCount / totalVerses) * 100).toFixed(1);

  const stats = [
    {
      title: "Mémorisés",
      value: memorizedCount,
      icon: Trophy,
      color: "from-yellow-500 to-yellow-600",
      percentage: memorizedPercentage,
    },
    {
      title: "Lus",
      value: readCount,
      icon: Eye,
      color: "from-blue-500 to-blue-600",
      percentage: readPercentage,
    },
    {
      title: "Révisés",
      value: reviewedCount,
      icon: CheckCircle2,
      color: "from-emerald-500 to-emerald-600",
    },
    {
      title: "Progression totale",
      value: `${memorizedPercentage}%`,
      icon: BookOpen,
      color: "from-purple-500 to-purple-600",
    },
  ];

  return (
    <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
      {stats.map((stat, index) => {
        const Icon = stat.icon;
        return (
          <Card key={index} className="border-none shadow-lg overflow-hidden">
            <CardContent className="p-6">
              <div className="flex items-center gap-3">
                <div className={`w-12 h-12 rounded-xl bg-gradient-to-br ${stat.color} flex items-center justify-center shadow-lg`}>
                  <Icon className="w-6 h-6 text-white" />
                </div>
                <div>
                  <p className="text-2xl font-bold text-gray-900">{stat.value}</p>
                  <p className="text-xs text-gray-600">{stat.title}</p>
                  {stat.percentage && (
                    <p className="text-xs text-emerald-600 font-medium mt-0.5">
                      {stat.percentage}% du Qur'ān
                    </p>
                  )}
                </div>
              </div>
            </CardContent>
          </Card>
        );
      })}
    </div>
  );
}
