import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Card } from "@/components/ui/card";
import { 
  CheckCircle2, 
  Circle, 
  Eye, 
  RotateCcw,
  Star,
  BookmarkPlus
} from "lucide-react";
import { toast } from "sonner";

// Sample verses for demonstration (Al-Fatiha)
const SAMPLE_VERSES = {
  1: [
    { number: 1, arabic: "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ", translation: "Au nom d'Allah, le Tout Miséricordieux, le Très Miséricordieux" },
    { number: 2, arabic: "الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ", translation: "Louange à Allah, Seigneur de l'univers" },
    { number: 3, arabic: "الرَّحْمَٰنِ الرَّحِيمِ", translation: "Le Tout Miséricordieux, le Très Miséricordieux" },
    { number: 4, arabic: "مَالِكِ يَوْمِ الدِّينِ", translation: "Maître du Jour de la rétribution" },
    { number: 5, arabic: "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ", translation: "C'est Toi [Seul] que nous adorons, et c'est Toi [Seul] dont nous implorons secours" },
    { number: 6, arabic: "اهْدِنَا الصِّرَاطَ الْمُسْتَقِيمَ", translation: "Guide-nous dans le droit chemin" },
    { number: 7, arabic: "صِرَاطَ الَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ الْمَغْضُوبِ عَلَيْهِمْ وَلَا الضَّالِّينَ", translation: "le chemin de ceux que Tu as comblés de faveurs, non pas de ceux qui ont encouru Ta colère, ni des égarés" },
  ],
};

export default function SurahReader({ surah, progress }) {
  const queryClient = useQueryClient();
  const [selectedVerse, setSelectedVerse] = useState(null);

  const verses = SAMPLE_VERSES[surah.number] || [];

  const getVerseProgress = (ayahNumber) => {
    return progress.find(
      p => p.surah_number === surah.number && p.ayah_number === ayahNumber
    );
  };

  const updateProgressMutation = useMutation({
    mutationFn: async ({ ayahNumber, progressType }) => {
      const existing = getVerseProgress(ayahNumber);
      
      if (existing) {
        return base44.entities.QuranProgress.update(existing.id, {
          progress_type: progressType,
          last_reviewed: new Date().toISOString(),
        });
      } else {
        return base44.entities.QuranProgress.create({
          surah_number: surah.number,
          surah_name: surah.name,
          ayah_number: ayahNumber,
          progress_type: progressType,
          mastery_level: progressType === 'memorized' ? 3 : 1,
          last_reviewed: new Date().toISOString(),
        });
      }
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['quran-progress'] });
      toast.success("Progression mise à jour");
    },
  });

  if (verses.length === 0) {
    return (
      <div className="text-center py-12">
        <BookmarkPlus className="w-16 h-16 text-gray-300 mx-auto mb-4" />
        <p className="text-gray-600 mb-2">Les versets de cette sourate seront bientôt disponibles</p>
        <p className="text-sm text-gray-500">En attendant, essayez la sourate Al-Fatiha (n°1)</p>
      </div>
    );
  }

  return (
    <div className="space-y-4">
      {/* Surah Header */}
      <div className="text-center py-8 bg-gradient-to-r from-emerald-50 to-white rounded-2xl border border-emerald-200">
        <p className="text-4xl font-arabic text-emerald-900 mb-2">{surah.nameArabic}</p>
        <p className="text-gray-600">{surah.translation}</p>
        <Badge variant="outline" className="mt-2">
          {surah.verses} versets • {surah.revelation}
        </Badge>
      </div>

      {/* Verses List */}
      <div className="space-y-4">
        {verses.map((verse) => {
          const verseProgress = getVerseProgress(verse.number);
          const isMemorized = verseProgress?.progress_type === 'memorized';
          const isRead = verseProgress?.progress_type === 'read';
          const isReviewed = verseProgress?.progress_type === 'reviewed';

          return (
            <Card 
              key={verse.number}
              className={`p-6 transition-all duration-300 ${
                isMemorized 
                  ? 'border-2 border-emerald-400 bg-emerald-50/50' 
                  : 'border border-gray-200 hover:border-emerald-300'
              }`}
            >
              {/* Verse Number & Actions */}
              <div className="flex items-center justify-between mb-4">
                <div className="flex items-center gap-2">
                  <div className="w-8 h-8 rounded-lg bg-emerald-100 flex items-center justify-center">
                    <span className="text-sm font-bold text-emerald-900">
                      {verse.number}
                    </span>
                  </div>
                  {isMemorized && (
                    <Badge className="bg-emerald-600">
                      <Star className="w-3 h-3 mr-1" />
                      Mémorisé
                    </Badge>
                  )}
                  {isRead && !isMemorized && (
                    <Badge variant="outline" className="text-blue-600 border-blue-300">
                      <Eye className="w-3 h-3 mr-1" />
                      Lu
                    </Badge>
                  )}
                </div>

                {/* Quick Actions */}
                <div className="flex items-center gap-2">
                  <Button
                    size="sm"
                    variant={isRead ? "default" : "outline"}
                    onClick={() => updateProgressMutation.mutate({
                      ayahNumber: verse.number,
                      progressType: 'read'
                    })}
                    className={isRead ? "bg-blue-600 hover:bg-blue-700" : ""}
                  >
                    <Eye className="w-4 h-4" />
                  </Button>
                  <Button
                    size="sm"
                    variant={isMemorized ? "default" : "outline"}
                    onClick={() => updateProgressMutation.mutate({
                      ayahNumber: verse.number,
                      progressType: 'memorized'
                    })}
                    className={isMemorized ? "bg-emerald-600 hover:bg-emerald-700" : ""}
                  >
                    <CheckCircle2 className="w-4 h-4" />
                  </Button>
                  <Button
                    size="sm"
                    variant="outline"
                    onClick={() => updateProgressMutation.mutate({
                      ayahNumber: verse.number,
                      progressType: 'reviewed'
                    })}
                  >
                    <RotateCcw className="w-4 h-4" />
                  </Button>
                </div>
              </div>

              {/* Arabic Text */}
              <p className="text-3xl font-arabic text-right leading-loose mb-4 text-gray-900">
                {verse.arabic}
              </p>

              {/* Translation */}
              <p className="text-gray-700 leading-relaxed border-t pt-4">
                {verse.translation}
              </p>

              {/* Mastery Level */}
              {verseProgress?.mastery_level && (
                <div className="flex items-center gap-2 mt-4">
                  <span className="text-xs text-gray-500">Maîtrise:</span>
                  <div className="flex gap-1">
                    {[1, 2, 3, 4, 5].map(level => (
                      <Star
                        key={level}
                        className={`w-4 h-4 ${
                          level <= verseProgress.mastery_level
                            ? 'text-yellow-500 fill-yellow-500'
                            : 'text-gray-300'
                        }`}
                      />
                    ))}
                  </div>
                </div>
              )}
            </Card>
          );
        })}
      </div>
    </div>
  );
}
